{
  "private": true,
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.0.18",
    "dva": "^2.4.1",
    "highlight.js": "^9.18.1",
    "lint-staged": "^10.0.7",
    "markdown-to-jsx": "^6.11.1",
    "marked": "^0.8.2",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-markdown": "^4.3.1",
    "react-mathjax": "^1.0.1",
    "react-mde": "^8.2.0",
    "react-syntax-highlighter": "^12.2.1",
    "react-zmage": "^0.8.5-beta.31",
    "remark-math": "^2.0.1",
    "showdown": "^1.9.1",
    "umi": "^3.0.18",
    "umi-request": "^1.2.19",
    "yorkie": "^2.0.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-standard": "^4.0.1"
  }
}
